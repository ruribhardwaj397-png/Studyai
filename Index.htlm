<!DOCTYPE html>
<html>
<head>
<title>StudyAI Free Tool</title>

<style>

body{
font-family: Arial;
background:#f2f2f2;
text-align:center;
padding:20px;
}

textarea{
width:80%;
height:120px;
}

button{
padding:10px;
margin:10px;
background:green;
color:white;
border:none;
}

#output{
background:white;
padding:15px;
margin-top:20px;
}

</style>

</head>

<body>

<h1>ðŸŽ“ StudyAI Tool</h1>

<textarea id="input" placeholder="Paste notes"></textarea>

<br>

<button onclick="runAI()">Generate</button>

<div id="output"></div>

<script>

async function runAI(){

let text=document.getElementById("input").value;

let response=await fetch(

"https://api-inference.huggingface.co/models/google/flan-t5-base",

{
method:"POST",

headers:{
"Content-Type":"application/json"
},

body:JSON.stringify({
inputs:"Summarize this: "+text
})
});

let result=await response.json();

document.getElementById("output").innerText=result[0].generated_text;

}

</script>

</body>
</html>
